<!DOCTYPE html>
<html>
<head>
  <title>GOV.UK Signon</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'bootstrap.min.css', 'application.css' %>
  <%= javascript_include_tag 'application', 'bootstrap-alert', 'bootstrap-button', 'bootstrap-modal', 'bootstrap-transition' %>
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "GOV.UK Signon", root_path, :class => 'brand' %>
      </div>
    </div>
  </div>

  <div class="container">

    <%- if notice %><p class="flash-notice"><%= notice %></p><% end -%>
    <%- if alert %><p class="flash-alert"><%= alert %></p><% end %>

    <div class="hero-unit">
      <%= yield %>
    </div>

    <hr>

    <footer>
      <p>&copy; GDS. <span class="pull-right">Signon version 2.0</span></p>
    </footer>

  </div> <!-- /container -->

</body>
</html>
