<table>
   <tbody>
     <tr>
    <th>&nbsp;</th>
    <% calendars.each do |year,c| -%>
    <th><%= c.year%></th>
    <% end -%>
   </tr>
     <tr><th>Clocks go back</th>
    <% calendars.each do |year,c| -%>
    <td><%= c.events[0].date.strftime('%d %B') %></td>
     <% end -%>
   </tr>
     <tr><th>Clocks go forward</th>
    <% calendars.each do |year,c| -%>
    <td><%= c.events[1].date.strftime('%d %B') %></td>
     <% end -%>
   </tr>
   </tbody>
 </table>

<div class="subscribe">
  <h3>Add to calendar</h3>
  <p><%= link_to ics_caption, ics_link %></p>
</div>