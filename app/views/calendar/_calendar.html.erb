<table class="calendar">
  <caption>
    <%= caption %>
  </caption>
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Day</th>
      <th scope="col">Holiday Name</th>
      <th scope="col">Notes</th>
    </tr>
  </thead>
  <tbody>
    <% calendar.events.each do |event| -%>
      <tr>
        <td><%= event.date.strftime('%d %B') %></td>
        <td><%= event.date.strftime('%A') %></td>
        <td><%= event.title %></td>
        <td><%= event.notes %></td>
      </tr>
    <% end -%>
  </tbody>
</table>

<div class="subscribe">
  <h3>Add dates to your calendar</h3>
  <p><%= link_to ics_caption, calendar_url(@scope_name, calendar.division, calendar.year, :format => 'ics') %></p>
</div>
