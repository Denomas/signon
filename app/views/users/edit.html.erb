<section>
  <%= form_for current_user, :url => user_path do |f| %>
  <%- unless current_user.errors.empty? -%>
    <ul class="errors">
      <%- current_user.errors.full_messages.each do |msg| -%>
      <li><%= msg %></li>
      <%- end -%>
    </ul>
  <%- end -%>

    <h1><%= t(".change_passphrase") %></h1>
    <p><%= t("helpers.label.user.password_guidance") %></p>

    <label></label>
    <%= t(:passphrase) %> <%= f.password_field :password %>
    
    <label></label>
    <%= t(:confirm_passphrase) %> <%= f.password_field :password_confirmation %>
    
    <hr>
    <%= f.submit t(".change"), :class => 'btn btn-primary' %></p>
  <% end %>
</section>
