<%= link_to "Create an account", new_user_invitation_path %>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Sign-in count</th>
      <th>Created</th>
      <th>Admin?</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="email"><%= link_to "#{user.name} <#{user.email}>", edit_admin_user_path(user) %></td>
        <td><%= user.sign_in_count %></td>
        <td><%= time_ago_in_words(user.created_at) %> ago</td>
        <td><%= user.is_admin ? "Yes" : "No" %></td>
        <td>
          <% if user.invited_but_not_accepted %>
            <%= form_tag resend_user_invitation_path(user) do %>
              <%= submit_tag "Resend signup email" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>