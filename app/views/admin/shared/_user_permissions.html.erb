<table class="table table-bordered table-striped table-on-white">
  <thead>
    <tr class="table-header">
      <th>Application</th>
      <% unless user_object.api_user? %>
        <th>Has access?</th>
      <% end %>
      <th><%= "Other" unless user_object.api_user? %> Permissions</th>
      <% if user_object.persisted? %>
        <th>Last synced at</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% applications_and_permissions(user_object).each_with_index do |(application, permission), index|
       attribute_name = user_object.api_user? ? 'api_user' : 'user'
     %>
      <tr>
        <td>
          <%= application.name %>
          <%= hidden_field_tag "#{attribute_name}[permissions_attributes][#{index}][application_id]", application.id %>
          <%= hidden_field_tag "#{attribute_name}[permissions_attributes][#{index}][id]", permission.id %>
        </td>
        <%
          # Emulate form.check_box helper:
          # http://api.rubyonrails.org/v3.1.3/classes/ActionView/Helpers/FormHelper.html#method-i-check_box
          # API Users will always have a "signin" permission for apps for which they have access token.
          # The hidden field ensures it is not lost.
        %>
        <%= hidden_field_tag "#{attribute_name}[permissions_attributes][#{index}][signin_permission]", user_object.api_user? ? "1" : "0" %>
        <% unless user_object.api_user? %>
          <td>
            <%= label_tag "user[permissions_attributes][#{index}][signin_permission]", "Has access to #{application.name}?", class: "rm" %>
            <%= check_box_tag "user[permissions_attributes][#{index}][signin_permission]", "1", permission.permissions.include?("signin") %>
          </td>
        <% end %>
        <td>
          <%= label_tag "#{attribute_name}[permissions_attributes][#{index}][permissions][]", "Permissions for #{application.name}", class: "rm" %>
          <%= select_tag "#{attribute_name}[permissions_attributes][#{index}][permissions][]",
                          options_for_select(application.supported_permission_strings(current_user) - ["signin"],
                                              permission.permissions - ["signin"]),
                          multiple: true,
                          class: "chosen-select",
                          'data-module' => 'chosen',
                          "data-placeholder" => "Start typing to search for permissions"
          %>
        </td>
        <% if user_object.persisted? %>
          <td>
            <% if permission.last_synced_at %>
              <% if permission.sync_needed? %>
                <span class="label label-danger"><%= time_ago_in_words(permission.last_synced_at) %> ago</span>
              <% else %>
                <span class="label label-success"><%= time_ago_in_words(permission.last_synced_at) %> ago</span>
              <% end %>
            <% else %>
              <span class="label label-danger">Never</span>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
