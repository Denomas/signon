html {
  font-size: 62.5%; /* reset to 10px default so 2.4rem == 24px */
}

body {
  font-size: 18px;
  font-size: 1.8rem;
  padding-top: 60px;
  padding-bottom: 40px;
}

.navbar a.brand {
  background-image: url(<%= asset_path 'header-crown.png' %>);
  background-position: 0 0.25em;
  background-repeat: no-repeat;
  color: #fff;
  font-family: "GillSans", "Gill Sans", "Helvetica Neue", Helvetica, sans-serif;
  margin-left: 0;
  padding-left: 2em;
}